html
  head
    style
      include css/bootstrap.css
    script(src='bower_components/angular/angular.js')
    script(src='bower_components/angular-sanitize/angular-sanitize.js')
    link(rel='stylesheet', href='dist/json-formatter.min.css')
    meta(charset='UTF-8')
    title Update page
  body
    .container
      button.btn.btn-link.btn-lg(onclick="location.href='/'") back to Main page
      form.form-horizontal(name='form', method='POST', action='/update')
        fieldset(ng-app='demo')
          center
            legend Update
          // NAME
          .form-group
            label.col-sm-2.control-label Name
            .col-sm-8
              input.form-control(readonly, name='name', type='text', value='#{name}')
          // METHOD
          .form-group
            label.col-sm-2.control-label METHOD
            .col-sm-8
              table
                tr
                  td(width='100px')
                    .radio
                      label
                        input#optionsRadios1(type='radio', name='method', value='GET', checked=(method=='GET'))
                        | GET
                  td(width='100px')
                    .radio
                      label
                        input#optionsRadios2(type='radio', name='method', value='POST', checked=(method=='POST'))
                        | POST
                tr
                  td(width='100px')
                    .radio
                      label
                        input#optionsRadios3(type='radio', name='method', value='PUT', checked=(method=='PUT'))
                        | PUT
                  td(width='100px')
                    .radio
                      label
                        input#optionsRadios4(type='radio', name='method', value='DELETE', checked=(method=='DELETE'))
                        | DELETE
          // PATH
          .form-group
            label.col-sm-2.control-label URL
            .col-sm-8
              input.form-control(name='url', type='text', value='#{url}')
          // TYPE
          .form-group
            label.col-sm-2.control-label TYPE
            .col-sm-8
              table
                tr
                  td(width='100px')
                    .radio
                      label
                        input#optionsRadios1(type='radio', name='type',, value='json', checked=(type=='json'))
                        | JSON
                  td(width='100px')
                    .radio
                      label
                        input#optionsRadios2(type='radio', name='type', value='xml', checked=(type=='xml') )
                        | XML
          // TEXTAREA
          .form-group(text='#{json}', ng-controller='MainCtrl')
              label.col-sm-2.control-label Content
              .result.col-sm-8
                textarea.col-xs-6.jsonFormatter(name='response', ng-model='textarea') 
                //- div(ng-show="formtype=='json'")
                .col-xs-6.jsonFormatter
                  json-formatter(json='textareaJson', open='1')
          // SUBMIT
          .form-group
            .col-sm-8.col-sm-offset-2
              button.btn.btn-primary(type='submit') Submit
    //- script(type='text/javascript',src='lib/angular-ui-router/release/angular-ui-router.min.js')
    //- script(type='text/javascript',src='js/ui-bootstrap-tpls.min.js')
    script(type='text/javascript',src='lib/app.js')

    script(src='dist/json-formatter.min.js')
    script(src='demo.js')
    style.
      .jsonFormatter {
      height:300px;
      }
