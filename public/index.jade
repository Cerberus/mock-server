html
  head
    style
      include css/bootstrap.css
      include css/td.css
      include dist/json-formatter.min.css
    script(type='text/javascript',src='lib/angular/angular.min.js')
    script(src='bower_components/angular-sanitize/angular-sanitize.js')
    link(rel='stylesheet', href='dist/json-formatter.min.css')
    meta(charset='UTF-8')
    title Main page
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-2')
            span.sr-only Toggle navigation
          .navbar-brand Nextzy
        #bs-example-navbar-collapse-2.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='/')
                b Main page
            li
              a(href='/log.html')
                b Log history
    br
    br
    br
    .container
      button.btn.btn-link.btn-lg(button id="toggle") + New document
      hidden
        form.form-horizontal(name='form', method='POST',action='/')
          fieldset(ng-app='demo')
            center
              legend New form
            // NAME
            .form-group
              label.col-sm-2.control-label Name
              .col-sm-8
                input.form-control(name='name', type='text', value='')
            // METHOD
            .form-group
              label.col-sm-2.control-label METHOD
              .col-sm-8
                table
                  tr
                    td(width='100px')
                      .radio
                        label
                          input#optionsRadios1(type='radio', name='method', value='GET')
                          | GET
                    td(width='100px')
                      .radio
                        label
                          input#optionsRadios2(type='radio', name='method', value='POST')
                          | POST
                  tr
                    td(width='100px')
                      .radio
                        label
                          input#optionsRadios3(type='radio', name='method', value='PUT')
                          | PUT
                    td(width='100px')
                      .radio
                        label
                          input#optionsRadios4(type='radio', name='method', value='DELETE')
                          | DELETE
            // PATH
            .form-group
              label.col-sm-2.control-label URL
              .col-sm-8
                input.form-control(name='url', type='text', value='')
            // TYPE
            .form-group
              label.col-sm-2.control-label TYPE
              .col-sm-8
                table
                  tr
                    td(width='100px')
                      .radio
                        label
                          input#optionsRadios1(type='radio', name='type', ng-model="formtype", value='json', checked="checked" )
                          | JSON
                    td(width='100px')
                      .radio
                        label
                          input#optionsRadios2(type='radio', name='type', ng-model="formtype", value='xml')
                          | XML
            // TEXTAREA
            .form-group(text='', ng-controller='MainCtrl')
              label.col-sm-2.control-label Content
              .result.col-sm-8
                textarea.col-xs-6.jsonFormatter(name='response', ng-model='textarea') 
                div(ng-show="formtype=='json'")
                  .col-xs-6.jsonFormatter
                    json-formatter(json='textareaJson', open='1')
            // SUBMIT
            .form-group
              .col-sm-8.col-sm-offset-2
                button.btn.btn-default(type='reset') Clear
                button.btn.btn-primary(type='submit') Submit

      div#App2(ng-app='myApp', ng-controller='MainController')
        table(table-layout='fixed')
          tr
            td Search :
            td(width='200px')
              input(class="form-control",type='text',ng-model='name')
        table.table.table-striped.table-hover(class="with-ellipsis",style="width:100%")
          thead
            tr
              th #
              th Name
              th METHOD
              th URL
              th
                center JSON
              th
              th
          tbody
            tr(ng-repeat="model in models | filter : name")
              td(width='3%') {{$index+1}}
              td(width='12%') {{model.name}}
              td(width='7%') {{model.method}}
              td(width='15%') {{model.url}}
              td(width='400px')
                div(title="{{model.response}}" )
                  button(value = '{{model.response}}',type='button' class='btn btn-link btn-sm' onclick="preview(value)") ðŸ”Ž
                  | {{model.response}}
              td(width='50px')
                a(ng-href="/edit?name={{model.name}}")
                  b [ Edit ]
              td(width='75px')
                a(ng-href="/delete?name={{model.name}}",onclick="return confirm('Are you sure to delete this item?');")
                  font(color = 'red')
                    b [ Delete ]   
    
    script(src='js/jquery.min.js')
    //- script(src='bower_components/angular/angular.js')
    script(src='bower_components/angular-sanitize/angular-sanitize.js')
    script(src='js/bootstrap.js')
    script(type="text/javascript").
      $(document).ready(function(){
      $("hidden").hide();
      });
      $("#toggle").click(function(){
      $("hidden").toggle();
      });
    script.
      $(document).ready(function(){
      $('[data-toggle="tooltip"]').tooltip();   
      });
    //- script(type='text/javascript',src='lib/angular/angular.min.js')
    script(type='text/javascript',src='lib/angular-ui-router/release/angular-ui-router.min.js')
    //- script(type='text/javascript',src='js/ui-bootstrap-tpls.min.js')
    script(type='text/javascript',src='lib/app.js')

    script(src='dist/json-formatter.min.js')
    script(type='text/javascript',src='demo.js')
    style.
      .jsonFormatter {
      height:300px;
      }
    script.
      function preview(str){
      alert(str)
      }   
