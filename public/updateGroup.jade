html
  head
    style
      include css/bootstrap.css
      include css/td.css
    script(type='text/javascript',src='lib/angular/angular.min.js')
    meta(charset='UTF-8')
    title Update Group
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-2')
            span.sr-only Toggle navigation
          .navbar-brand
            img(style="max-width:100px; margin-top: -1px;" src="assets/nextzy_white_logo.png")
        #bs-example-navbar-collapse-2.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/')
                b Main page
            li.active
              a(href='/groupList')
                b Service Group
            li
              a(href='/log.html')
                b Log history
    .container
      form.form-horizontal(name='form', method='POST', action='/modifyGroup')
        fieldset
          center
            legend Group form
          // NAME
          .form-group
            label.col-sm-2.control-label Name
            .col-sm-8
              input.form-control(name='name', type='text', value='#{name}')
              input.form-control(readonly id='_id', name='_id', type='hidden', value='#{_id}')
              input.form-control(readonly id='list', name='list', type='hidden', value='#{list}')
          // TEXTAREA
          .form-group
              label.col-sm-2.control-label Description
              .result.col-sm-8
                textarea.col-xs-6(class="form-control" id="json" name='description')
                  | #{description}
          // SUBMIT
          .form-group
            .col-sm-8.col-sm-offset-2
              a.btn.btn-default(href='/groupList') Back
              span 
              button.btn.btn-primary(type='submit') Submit
      div#App2(ng-app='myApp', ng-controller='checkList')
        .well
          input(id="inputNormal" placeholder="Search for any.." class="form-control",type='text',ng-model='name')
        table.table.table-striped.table-hover(class="with-ellipsis",style="width:100%")
          thead
            tr
              th
              th #
              th Name
              th METHOD
              th URL
              th
                center Response
              th
              th
          tbody
            tr(ng-repeat="model in models | filter : name")
              td(width='1px')
                input(type="checkbox" ng-model="model.checked" ng-checked="model.checked")
              td(width='3%') {{$index+1}}
              td(width='12%') {{model.name}}
              td(width='7%') {{model.method}}
              td(width='15%') {{model.url}}
              td(width='400px')
                div(title="{{model.response}}")
                  button(value = '{{model.response}}',type='button' class='btn btn-link btn-sm' onclick="preview(value)") ðŸ”Ž
                  | {{model.response}}
              td(width='50px')
                a(ng-href="/edit?name={{model.name}}")
                  b [ Edit ]
              td(width='75px')
                a(ng-href="/delete?name={{model.name}}",onclick="return confirm('Are you sure to delete this item?');")
                  font(color = 'red')
                    b [ Delete ]
    script(src='js/jquery.min.js')
